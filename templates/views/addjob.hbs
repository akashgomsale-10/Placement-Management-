    <style>

        .user-details{
            display: flex;
            flex-wrap: wrap;
            flex-direction: column;
            justify-content: space-between;
            margin: 20px 0 12px 0;
            width: 63rem;
            justify-content: center;
            align-items: center;
        }
        .container{
                margin-top: 3rem;
        }

    </style>

