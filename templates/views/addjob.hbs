<body>
   
  {{> admin_navbar}}
    
    <div class="container">
    <div class="title">Add Job</div>
    <div class="content">
      <form method="post" action="/addjob" >
        <div class="user-details">
          <div class="input-box">
            <span class="details">
                
            </span>
            <input type="text"  placeholder="Job Title" name="job_title" required>
          </div>
          

            <div class="input-box">
              <span class="details">
              </span>
              <select name="select_company" id="state" class="form-control" aria-placeholder="Select Company"  required>
                <option value="#" id="s_company">--Select Company--</option>
                {{!-- <option value="google">google</option> --}}
              
              </select>
            </div>

            <div class="input-box">
              <span class="details">
              </span>
              <select id="country" name="job_type">
                
                <option value="#" >--Select Job Type--</option>
                <option value="full_time ">full time </option>
                <option value="part_time">part time</option>
                
              </select>
            </div>


          <div class="input-box">
            <span class="details">
                
            </span>
            <input type="text"  placeholder="Skill required" name="skills" required>
          </div>

          <div class="input-box">
            <span class="details">
                
            </span>
            <input type="text"  placeholder="City" name="city" required>
          </div>
            
            {{!-- <div class="input-box">
              <span class="details">
                  

              </span>
              <textarea name="address" id="address" cols="20" rows="7" placeholder="Address" required></textarea>
              
            </div> --}}
            <div class="input-box">
              <span class="details">
              </span>
              <textarea name="description" id="description" cols="20" rows="7" placeholder="Description" required></textarea>
              
            </div>
          </div>
          <div class="button">
            <input type="submit"  value="Add">
          </div>
        </div>
      </form>
    </div>
    
  </div>
  



  <script>

        fetch("http://localhost:8080/showdatabase").then(
        res => {
            res.json().then(
            data => {
                console.log(data.c_name);
                if (data.length > 0) {

                var select = document.getElementById('state')  
                
                data.forEach((itemData) => {
                   
                  myOption = document.createElement("option");
                  myOption.text = `${itemData.c_name}`;
                  myOption.value =  `${itemData.c_name}`;
                  select.appendChild(myOption);
                });
               
                }
            }
            )
        }
        );

</script>

